---
import { Button } from "@/components/ui/button";
import { Card, CardHeader, CardTitle, CardDescription, CardContent, CardFooter } from "@/components/ui/card";
import { Check } from "lucide-react";
---

<section id="pricing" class="py-16 md:py-24">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Choose Your Plan</h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Get started with Angry Beard Bot today. No hidden fees, cancel anytime.
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <Card className="group hover:shadow-lg transition-all duration-300 flex flex-col h-full">
        <CardHeader>
          <CardTitle className="text-2xl">Starter</CardTitle>
          <CardDescription>Perfect for small teams</CardDescription>
          <div class="mt-4">
            <span class="text-4xl font-bold">$0</span>
            <span class="text-muted-foreground">/month</span>
          </div>
        </CardHeader>
        <CardContent className="flex-grow">
          <ul class="space-y-3">
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Up to 5 repositories</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Basic code reviews</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Standard response time</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Community support</span>
            </li>
          </ul>
        </CardContent>
        <CardFooter className="mt-auto">
          <Button className="w-full" variant="outline">Get Started</Button>
        </CardFooter>
      </Card>
      <Card className="group hover:shadow-lg transition-all duration-300 border-primary relative flex flex-col h-full">
        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 px-4 py-1 bg-primary text-primary-foreground text-sm font-medium rounded-full">
          Most Popular
        </div>
        <CardHeader>
          <CardTitle className="text-2xl">Pro</CardTitle>
          <CardDescription>For growing teams</CardDescription>
          <div class="mt-4">
            <span class="text-4xl font-bold">$10</span>
            <span class="text-muted-foreground">/month</span>
          </div>
        </CardHeader>
        <CardContent className="flex-grow">
          <ul class="space-y-3">
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Unlimited repositories</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Advanced code reviews</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Priority response time</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Custom review criteria</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Email support</span>
            </li>
          </ul>
        </CardContent>
        <CardFooter className="mt-auto">
          <Button className="w-full">Get Started</Button>
        </CardFooter>
      </Card>
      <Card className="group hover:shadow-lg transition-all duration-300 flex flex-col h-full">
        <CardHeader>
          <CardTitle className="text-2xl">Enterprise</CardTitle>
          <CardDescription>For large organizations</CardDescription>
          <div class="mt-4">
            <span class="text-4xl font-bold">Custom</span>
          </div>
        </CardHeader>
        <CardContent className="flex-grow">
          <ul class="space-y-3">
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Everything in Pro</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Custom integrations</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Dedicated support</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>SLA guarantees</span>
            </li>
            <li class="flex items-center">
              <Check className="w-5 h-5 text-primary mr-2" />
              <span>Custom training</span>
            </li>
          </ul>
        </CardContent>
        <CardFooter className="mt-auto">
          <Button className="w-full" variant="outline">Contact Sales</Button>
        </CardFooter>
      </Card>
    </div>
    <div class="text-center mt-12">
      <p class="text-sm text-muted-foreground">
        All plans include a 14-day free trial. No credit card required.
      </p>
    </div>
  </div>
</section> 